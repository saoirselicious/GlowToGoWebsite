<header role="banner">

    <nav class="navbar navbar-expand-md navbar-dark bg-light">
      <div class="container">
        <a class="navbar-brand" href="{{'../body/index.html' | url}}">Glow to Go</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05"
          aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse navbar-dark" id="navbarsExample05">
          <ul class="navbar-nav ml-auto pl-lg-5 pl-0">

            {% set navPages = collections.all | eleventyNavigation %}
            {% macro renderNavListItem(entry) -%}
            
            {% if entry.children.length > 0 %}
              {%- set counter=0 %}

              
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="{{ entry.url | url }}" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ entry.title }}</a>

                <div class="dropdown-menu" aria-labelledby="dropdown04">
                  {%- for child in entry.children %}
                    {%- set counter=counter+1 %}
                    {% if counter < 6 %}        
                      <a class="dropdown-item" href="{{ child.url | url }}">{{ child.title }}</a>    
                    {% elif counter == 6 %}
                        <a class="dropdown-item" href="LandingPage">Click to view more blog posts</a>
                    {% endif %}
                  {% endfor -%} 
                </div>
                </li>

            {% else %}
              <li class="nav-item"</li>
                <a class="nav-link active" href="{{ entry.url | url }}">{{ entry.title }}</a> 
              </li>

            {% endif %}
            {%- endmacro %}
            


{%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
</ul>
</div>
</div>
</nav>
</header>
