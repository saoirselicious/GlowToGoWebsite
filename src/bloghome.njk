---
pagination:
  data: collections.bloging
  size: 12
  alias: bloggers


pageName: "Blog Home page {{ pagination.pageNumber + 1 }}"
permalink: "bloghome/page-{{ pagination.pageNumber + 1 }}/index.html"

backgroundImage: images/post-bg.jpg
eleventyNavigation:
    key: blog
    title: Blog Home
---
<link rel="stylesheet" href="../animate.css">
<title>Glow to Go || Blog Page {{ pagination.pageNumber + 1 }}</title>
<link rel="icon" href="images/logo.jpeg">

{% include "_header.njk" %}
    
    <section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url(../../images/blog.jpg);">
      <div class="container">
        <div class="row align-items-center site-hero-inner justify-content-center">
          <div class="col-md-8 text-center">

            <div class="mb-5 element-animate">
              <h1>Blog</h1>
              <p>Discover &amp; connect with great places around the world.</p>
            </div>

            
          </div>
        </div>
      </div>
    </section>
    <!-- END section -->


    <section class="slider-wrap site-section">
      <div class="container">
        
      <div class="media-body d-block media-feature">
        {% set counter = 1 %}
        {%- for blog in pagination.items | eleventyNavigation("blog") %}
          {% if counter === 1 %}
            <div class="row">
          {% endif %} 

          <div class="col-md-4 element-animate fadeInUp element-animated ">
            {% if blog.previewImage %}
            <a href="{{ blog.url | url }}" class="img-bg" style="background-image: url('{{ blog.previewImage | url }}')">
            {% else %}
            <a href="{{ blog.url | url }}" class="img-bg" style="background-image: url(../../images/logo.jpeg);">
            {%- endif -%}
              <div class="text ">
                <span class="icon ion-ios-videocam"></span>
                <h2 >{{ blog.title }}</h2>
                <p>Continue reading...</p>
                                        
              </div>
            </a>
          </div>

          {% if counter === 3 %}
            </div>

          {% endif %}

          {% if counter === 3 %}
            {% set counter = 0 %} 
          {% endif %}

          {% set counter = counter + 1 %} 
        <!-- check the for loop has ended if counter isn't up you need to add in the end of the -->
        {%- endfor -%}
        </div>
                
        <div class="row">
          {% if pagination.href.previous and pagination.href.next%}
            <div class="col-6 text-left mb-3"><a href="{{ pagination.href.previous | url}}"  class="btn btn-primary">Previous</a></div>
            <div class="col-6 text-right"><a href="{{ pagination.href.next | url}}" class="btn btn-primary">Next</a></div>
          {% elif pagination.href.previous %}
            <div class="col-6 text-left mb-3"><a href="{{ pagination.href.previous | url}}"  class="btn btn-primary">Previous</a></div>
          {% elif pagination.href.next %}
            <div class="col-12 text-right"><a href="{{ pagination.href.next | url}}" class="btn btn-primary">Next</a></div>
          {% endif %}
            
        </div>
      </div>
    </section>
    
{% include "_footer.njk" %}
</body>

